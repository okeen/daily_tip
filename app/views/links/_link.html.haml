%tr.link{data: {link_id: link.id}}
  %td
    = tip_link link
  %td.link_action.span3
    = link_to t(".show_inline"), "#", class: "btn btn-small link_show_inline"
    = link_to t("visit"), raw(link.url), class: "btn btn-small link_visit", target: :_blank
    = link_to t("close"), "#", class: "pull-right btn btn-small link_close hide"

%tr.readability_row.hide
  %td{colspan: 2}
    .link_iframe_container.span12


